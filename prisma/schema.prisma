// ═══════════════════════════════════════════════
// KLIK&GO — Prisma Schema V2
// PostgreSQL • Prisma ORM
// Photos, Labels, Reviews, Loyalty
// ═══════════════════════════════════════════════

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── Enums ────────────────────────────────────

enum Role {
  CLIENT
  CLIENT_PRO
  CLIENT_PRO_PENDING
  BOUCHER
  ADMIN
}

enum ProStatus {
  PENDING
  APPROVED
  REJECTED
}

enum OrderStatus {
  PENDING
  ACCEPTED
  PREPARING
  READY
  PICKED_UP
  COMPLETED
  DENIED
  CANCELLED
  PARTIALLY_DENIED
}

enum Unit {
  KG
  PIECE
  BARQUETTE
}

enum RewardType {
  DISCOUNT
  FREE_PRODUCT
  PERCENTAGE
}

// ── User ─────────────────────────────────────

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique @map("clerk_id")
  email     String   @unique
  phone     String?
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  role      Role     @default(CLIENT)

  // PRO fields
  companyName    String?    @map("company_name")
  siret          String?
  sector         String?
  proStatus      ProStatus? @map("pro_status")
  proValidatedBy String?    @map("pro_validated_by")
  proValidatedAt DateTime?  @map("pro_validated_at")

  // Notification preferences
  notifEmail    Boolean @default(true)  @map("notif_email")
  notifSms      Boolean @default(false) @map("notif_sms")
  notifWhatsapp Boolean @default(false) @map("notif_whatsapp")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  orders        Order[]
  favoriteShops Shop[] @relation("UserFavorites")
  notifications Notification[]
  reviews       Review[]
  loyaltyPoints LoyaltyPoints[]

  @@map("users")
}

// ── Shop ─────────────────────────────────────

model Shop {
  id          String  @id @default(cuid())
  slug        String  @unique
  name        String
  address     String
  city        String
  phone       String
  imageUrl    String? @map("image_url")
  description String?

  // Opening hours — JSON { lundi: { open: "08:00", close: "19:00" }, ... }
  openingHours Json @default("{}") @map("opening_hours")

  // Service controls
  prepTimeMin   Int     @default(15)    @map("prep_time_min")
  busyMode      Boolean @default(false) @map("busy_mode")
  busyExtraMin  Int     @default(10)    @map("busy_extra_min")
  paused        Boolean @default(false)
  isOpen        Boolean @default(true)  @map("is_open")
  autoAccept    Boolean @default(false) @map("auto_accept")
  maxOrdersHour Int     @default(20)    @map("max_orders_hour")

  // Stats
  rating      Float @default(0)
  ratingCount Int   @default(0) @map("rating_count")

  // Commission
  commissionPct Float @default(0) @map("commission_pct")

  // Owner (clerkId du boucher)
  ownerId String @map("owner_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  products     Product[]
  categories   Category[]
  orders       Order[]
  favoritedBy  User[] @relation("UserFavorites")
  reviews      Review[]
  loyaltyRules LoyaltyRule[]

  @@map("shops")
}

// ── Category ─────────────────────────────────

model Category {
  id    String  @id @default(cuid())
  name  String
  emoji String?
  order Int     @default(0)

  shopId String @map("shop_id")
  shop   Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)

  products Product[]

  @@map("categories")
}

// ── Product ──────────────────────────────────

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  imageUrl    String? @map("image_url")

  priceCents    Int  @map("price_cents")
  proPriceCents Int? @map("pro_price_cents")

  unit     Unit
  inStock  Boolean @default(true) @map("in_stock")
  stockQty Float?  @map("stock_qty")

  categoryId String   @map("category_id")
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  tags String[]

  // Origin & Halal
  origin   String? // "France", "Irlande", "Nouvelle-Zélande"
  halalOrg String? @map("halal_org") // "AVS", "ARGML", "Mosquée de Paris"

  // Promo
  promoPct Int?      @map("promo_pct")
  promoEnd DateTime? @map("promo_end")

  shopId String @map("shop_id")
  shop   Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)

  // Relations
  orderItems OrderItem[]
  images     ProductImage[]
  labels     ProductLabel[] @relation("ProductLabels")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("products")
}

// ── Notification ──────────────────────────────

model Notification {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  type      String   // ORDER_PENDING, ORDER_ACCEPTED, ORDER_READY, etc.
  message   String
  orderId   String?  @map("order_id")
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId, read])
  @@index([userId, createdAt])
  @@map("notifications")
}

// ── Order ────────────────────────────────────

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique @map("order_number")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  isPro Boolean @default(false) @map("is_pro")

  shopId String @map("shop_id")
  shop   Shop   @relation(fields: [shopId], references: [id])

  status OrderStatus @default(PENDING)

  // Timing
  requestedTime  String?   @map("requested_time")
  estimatedReady DateTime? @map("estimated_ready")
  actualReady    DateTime? @map("actual_ready")
  pickedUpAt     DateTime? @map("picked_up_at")

  totalCents Int @map("total_cents")

  // QR Code
  qrCode      String?   @unique @map("qr_code")
  qrScannedAt DateTime? @map("qr_scanned_at")

  // Rating
  rating        Int?    @map("rating")
  ratingComment String? @map("rating_comment")

  // Notes
  customerNote String? @map("customer_note")
  boucherNote  String? @map("boucher_note")
  denyReason   String? @map("deny_reason")

  items OrderItem[]

  // Notification tracking
  notifSent Json? @map("notif_sent")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([shopId, status])
  @@index([userId])
  @@map("orders")
}

// ── Order Item ───────────────────────────────

model OrderItem {
  id String @id @default(cuid())

  orderId String @map("order_id")
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String  @map("product_id")
  product   Product @relation(fields: [productId], references: [id])

  name       String
  quantity   Float
  unit       Unit
  priceCents Int    @map("price_cents")
  totalCents Int    @map("total_cents")

  available   Boolean @default(true)
  replacement String?

  @@map("order_items")
}

// ── Product Image ─────────────────────────────

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  alt       String?
  order     Int     @default(0)
  isPrimary Boolean @default(false) @map("is_primary")

  productId String  @map("product_id")
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@index([productId])
  @@map("product_images")
}

// ── Product Label ─────────────────────────────

model ProductLabel {
  id    String  @id @default(cuid())
  name  String  @unique // "Halal", "Bio", "Local", "Promo", "Nouveau", "Race à Viande"
  color String? // hex color for badge display
  icon  String? // emoji or icon name

  products Product[] @relation("ProductLabels")

  @@map("product_labels")
}

// ── Review ────────────────────────────────────

model Review {
  id      String  @id @default(cuid())
  rating  Int     // 1–5
  comment String?

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  shopId String @map("shop_id")
  shop   Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)

  orderId String? @unique @map("order_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, shopId, orderId])
  @@index([shopId])
  @@map("reviews")
}

// ── Loyalty Rule ──────────────────────────────

model LoyaltyRule {
  id          String  @id @default(cuid())
  name        String  // "1 point par euro dépensé"
  description String?

  pointsPerEuro   Float      @default(1)   @map("points_per_euro")
  rewardThreshold Int        @default(100) @map("reward_threshold")
  rewardType      RewardType @default(DISCOUNT) @map("reward_type")
  rewardValue     Int        @default(500)  @map("reward_value") // cents or %

  active Boolean @default(true)

  shopId String @map("shop_id")
  shop   Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@index([shopId])
  @@map("loyalty_rules")
}

// ── Loyalty Points (per user per shop) ────────

model LoyaltyPoints {
  id     String @id @default(cuid())
  points Int    @default(0)

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  shopId String @map("shop_id")

  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, shopId])
  @@map("loyalty_points")
}
